#include <stdio.h>

int main()
{
    int arr[]={0, 1, 0, 3, 12};
    int n= sizeof(arr)/ sizeof (arr[0]);
    int pos=0;
    for(int i=0;i<n;i++){
        if (arr[i] != 0) {
            printf("%d ", arr[i]);
        }
    }
    for(int i=0;i<n;i++){
        if (arr[i] == 0){
         printf("%d ",arr[i]);
            }
    }

    return 0;
}

//python
arr = [0, 1, 0, 3, 12]

# Print non-zero elements first
for i in arr:
    if i != 0:
        print(i, end=" ")

# Then print all zeros
for i in arr:
    if i == 0:
        print(i, end=" ")

