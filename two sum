#include <stdio.h>

int main()
{
    int arr[]={2, 7, 11, 15};
    int target= 9;
    int n= sizeof (arr) / sizeof arr[0];
    for(int i=0;i<n-1;i++){
    for(int j=i+1;j<n-1;j++){
        if(arr[i]+arr[j]== target){
            printf("Indices: %d and %d\n", i, j);
            return 0;
        }
    }
    }
}


//python
arr = [2, 7, 11, 15]
target = 9
n = len(arr)
for i in range(n):
    for j in range(i + 1 , n):
        if arr[i]+arr[j]==target:
            print("indices:", i,"and", j)
            break
